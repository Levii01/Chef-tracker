{{outlet}} <br><br>{{paper-progress-linear}}
<h1>Menu Tracker</h1>
<p>Menu Tracker helps you see what dishes are available today,</p>



{{#paper-content class="md-whiteframe-z1 list-demo" }}
  {{#paper-list}}
    {{#each model as |food|}}
      {{#if food.available}}
        {{#paper-item class="md-3-line" }}
          <div class="md-list-item-text">
            <p>
              <h3>{{food.name}}!</h3>
              {{#paper-button onClick=(action "makeUnavailable" food)}}Make Unavailable{{/paper-button}}
              {{#paper-button onClick=(action "destroyItem" food)}}Destroy{{/paper-button}}
            </p>
          </div>
        {{/paper-item}}
      {{else}}
        {{#paper-item class="md-3-line" }}
          <div class="md-list-item-text">
            <p>
              <h3><s>{{food.name}}!</s></h3>
              {{#paper-button onClick=(action "makeAvailable" food)}}Make Available{{/paper-button}}
              {{#paper-button onClick=(action "destroyItem" food)}}Destroy{{/paper-button}}
            </p>
          </div>
        {{/paper-item}}
      {{/if}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}

{{paper-input label="New Item" value=newItem onChange=(action (mut newItem))}}

{{#paper-button onClick=(action "saveNewItem")}}Save{{/paper-button}}

<h3>{{model.length}} foods total</h3>

{{paper-progress-linear}}
